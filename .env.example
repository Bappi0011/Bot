# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# Solana RPC Configuration (DEPRECATED - kept for backward compatibility)
# NOTE: This bot now uses WebSocket streaming instead of RPC polling
# Solana RPC endpoint URL (use a reliable RPC provider like QuickNode, Alchemy, or public endpoint)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Raydium V4 Program ID (AMM Program) (DEPRECATED - kept for backward compatibility)
RAYDIUM_V4_PROGRAM_ID=675kPX9MHTjS2zt1qfr1NYHuzeLXfQM9H24wFSUt1Mp8

# WebSocket Configuration
# OpenOcean Meme API WebSocket endpoint
WS_URL=wss://meme-api.openocean.finance/ws/public

# WebSocket channel to subscribe to (comma-separated for multiple channels)
WS_CHANNEL=token

# WebSocket reconnection interval in seconds (default: 5)
WS_RECONNECT_INTERVAL=5

# Maximum reconnection attempts before alerting (0 = unlimited, default: 0)
WS_MAX_RECONNECT_ATTEMPTS=0

# WebSocket ping interval in seconds to keep connection alive (default: 30)
WS_PING_INTERVAL=30

# Filter Configuration
# Minimum liquidity threshold in USD (default: 0)
FILTER_LIQUIDITY_MIN=0

# Maximum liquidity threshold in USD (default: 10000000)
FILTER_LIQUIDITY_MAX=10000000

# Minimum buy count in 24h (default: 0)
FILTER_BUY_COUNT_24H_MIN=0

# Token status filter (comma-separated: active,inactive,all - default: active)
FILTER_TOKEN_STATUS=active

# Error Alerting Configuration
# Enable/disable sending error alerts to Telegram (true/false)
TELEGRAM_ERROR_ALERTS_ENABLED=true

# Enable debug mode for additional context in error messages (true/false)
# WARNING: Debug mode may expose sensitive information in error messages
TELEGRAM_ERROR_DEBUG_MODE=false
