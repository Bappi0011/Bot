# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# ========================================
# SOLANA WEBSOCKET CONFIGURATION
# ========================================
# Solana WebSocket endpoint for real-time blockchain data
# Use wss://api.mainnet-beta.solana.com for mainnet
# Use wss://api.devnet.solana.com for devnet
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Solana RPC HTTP endpoint (used for fetching transaction details)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# SPL Token Program ID - the program responsible for all SPL tokens on Solana
SPL_TOKEN_PROGRAM_ID=TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA

# Raydium Liquidity Pool V4 Program ID (for detecting liquidity pool events)
RAYDIUM_LIQUIDITY_POOL_V4=675kPX9MHTjS2zt1qfr1NYHuzeLXfQM9H24wFSUt1Mp8

# ========================================
# WEBSOCKET CONNECTION SETTINGS
# ========================================
# WebSocket reconnection interval in seconds (default: 5)
WS_RECONNECT_INTERVAL=5

# Maximum reconnection attempts before alerting (0 = unlimited, default: 0)
WS_MAX_RECONNECT_ATTEMPTS=0

# WebSocket ping interval in seconds to keep connection alive (default: 30)
WS_PING_INTERVAL=30

# ========================================
# FILTER CONFIGURATION
# ========================================
# Minimum liquidity in SOL for token alerts (default: 0)
FILTER_LIQUIDITY_MIN_SOL=0

# Cooldown period in minutes to avoid duplicate alerts for same token (default: 60)
TOKEN_ALERT_COOLDOWN_MINUTES=60

# ========================================
# PHOTONSCAN API CONFIGURATION
# ========================================
# PhotonScan API endpoint for token discovery
PHOTON_API_URL=https://api.photon-sol.tinyastro.io/tokens

# PhotonScan polling interval in seconds (default: 60)
PHOTON_POLL_INTERVAL=60

# PhotonScan API key (optional, if required by the API)
PHOTON_API_KEY=

# ========================================
# ERROR ALERTING CONFIGURATION
# ========================================
# Enable/disable sending error alerts to Telegram (true/false)
TELEGRAM_ERROR_ALERTS_ENABLED=true

# Enable debug mode for additional context in error messages (true/false)
# WARNING: Debug mode may expose sensitive information in error messages
TELEGRAM_ERROR_DEBUG_MODE=false
